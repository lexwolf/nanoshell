{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build active (nanoshell flags)",
      "type": "shell",
      "command": "g++",
      "args": [
        "-Wall",
        "-g",
        "-I/usr/include/",
        "-L/usr/local/lib",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.run",
        "-lgsl",
        "-lgslcblas",
        "-lm",
        "-larmadillo"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "build (make)",
      "type": "shell",
      "command": "make -j",
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": ["$gcc"],
      "group": { "kind": "build", "isDefault": true }
    }
  ]
}
