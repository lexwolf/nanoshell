# Ignore everything under data/, img/ and bin/
data/**
img/**
bin/**

# Track all input trees (dirs + contents)
!data/input/
!data/input/**
!img/input/
!img/input/**

# Allow output top-level dirs so we can keep skeletons with .gitkeep
!data/output/
!img/output/

# Track .gitkeep placeholders anywhere in these trees
!data/**/.gitkeep
!img/**/.gitkeep
!bin/**/.gitkeep

# Ignore metadata file everywhere
.conversion_metadata

# Editor swap / temp files
*.swp
*.swo
*.kate-swp
.*.kate-swp

# Ignore build intermediates accidentally created under include/
include/**/*.o
include/**/*.obj
include/**/*.a
include/**/*.so
include/**/*.d
include/**/*.lo
include/**/*.la
include/**/*.mod
include/**/*.pcm